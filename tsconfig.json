{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"strict": true,
		"strictPropertyInitialization": false,
		"noImplicitReturns": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*",
		"__tests__/**/*"
	],
	"exclude": [
		"node_modules",
		"**/*.test.ts"
	],
	"files": ["src/types/index.d.ts"]
}
